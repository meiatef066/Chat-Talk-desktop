               <padding>
                  <Insets bottom="12.0" left="12.0" right="12.0" top="12.0" />
               </padding>
            </HBox>
            <ScrollPane fx:id="userListContainer" prefHeight="612.0" prefWidth="661.0" stylesheets="@../../../CSS/style.css">
               <content>
                  <VBox fx:id="userListVBox" prefHeight="558.0" prefWidth="486.0" />
               </content>
            </ScrollPane>
         </children>
      </VBox>
   </center>

   <right>
      <VBox prefHeight="694.0" prefWidth="314.0" BorderPane.alignment="CENTER">
         <children>
            <HBox prefHeight="100.0" prefWidth="200.0">
