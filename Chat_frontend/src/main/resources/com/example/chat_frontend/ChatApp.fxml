<BorderPane prefHeight="694.0" prefWidth="930.0" stylesheets="@../../../CSS/style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.chat_frontend.controller.ChatApp">
   <center>
      <VBox prefHeight="200.0" prefWidth="100.0" styleClass="bg-primary" stylesheets="@../../../CSS/style.css" BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER" prefHeight="78.0" prefWidth="686.0">
               <children>
                  <ImageView fitHeight="33.0" fitWidth="33.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../../images/icons2/icons8-search-50.png" />
                     </image>
                  </ImageView>
                  <TextField prefHeight="34.0" prefWidth="493.0" promptText="Enter email or number..." styleClass="search-input" stylesheets="@../../../CSS/style.css" />
